
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/css")

    <style>
        /* Estilo para el contenedor principal */
        .container {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        /* Estilo para el div que deseas colocar en el centro vertical */
        .centered-div {
            background-color: #f0f0f0;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="container">

        <div class="centered-div">

            <form action="@Url.Action("Index","Home")" class="bg-light" style="padding:10px" method="post">

                <div class="form-group">
                    <label>Email:</label>
                    <input class="form-control" type="email" name="correo" style="width: 300px;" required />
                </div>

                <div class="form-group">
                    <label>Contraseña:</label>
                    <input class="form-control" type="password" name="clave" style="width: 300px;" required />
                </div>

                <br />


                <button type="submit" class="btn btn-success">Ingresar</button>
            </form>


            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }



        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
