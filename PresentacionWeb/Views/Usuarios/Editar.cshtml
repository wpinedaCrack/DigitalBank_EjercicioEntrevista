@model PresentacionWeb.Models.UsuarioModel
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="card">
        <div class="card-header">
            Editar Contacto
        </div>
    <div class="card-body">


        <form asp-action="Eliminar" asp-controller="Usuarios" method="post">
            <div class="form-group">
                @Html.LabelFor(model => model.Nombre)
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
            </div>

            @*<div class="form-group">
            Fecha de Nacimiento
            <input type="date" id="FechaNacimiento" name="FechaNacimiento" value="@Model.FechaFormateada"  class="form-control" />
        </div>*@

            <div class="form-group">
                Fecha de Nacimiento

                @Html.TextBoxFor(model => model.FechaFormateada, new { @class = "form-control", data_val_date = "El formato debe ser dd/MM/yyyy" })

                @Html.ValidationMessageFor(model => model.FechaFormateada, "", new { @class = "text-danger" })
            </div>


            @*<div class="form-group">
                <label asp-for="@Model.FechaNacimiento" class="control-label"></label>
                <input asp-for="@Model.FechaNacimiento" class="form-control" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>*@



            <div class="form-group">
                Email
                <input type="email" id="Email" name="Email" value="@Model.Email" class="form-control" />
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Sexo)
                <select id="Sexo" name="Sexo" class="form-control">
                    <option value="@Model.Sexo">@Model.Sexo</option>
                    <option value="M">Masculino</option>
                    <option value="F">Femenino</option>
                </select>
            </div>


            <br />

            <button type="submit" class="btn btn-primary">Actualizar</button>
            @Html.ActionLink("Volver a la lista", "ListaUsuarios", "Usuarios", null, new { @class = "btn btn-warning" })
        </form>


    </div>
</div>
